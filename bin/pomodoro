// # pomodoro-timer

var growl    = require('growl')
  , program  = require('commander')
  , path     = require('path')
  , fs       = require('fs')
  , version  = require('../package').version
  , play     = require('play').Play()
  , pomodoro = path.join(__dirname, '..', 'assets', 'pomodoro-timer.png')
  , start    = path.join(__dirname, '..', 'assets', 'start.wav')
  , done     = path.join(__dirname, '..', 'assets', 'done.wav')

program
  .version(version)
  .option('-m, --mute', 'Mute start and done sounds, played by default', parseInt)
  .option('-t, --time [n]', 'Custom time, defaults to 25 minutes')
  .parse(process.argv)


// Transform minutes to miliseconds if time is given, otherwise defaults to 25 min
program.time = program.time * 60000 || 1500000

// After prompting task 
program.prompt('task: ', createTask)


function playSound(sound){
  if(program.mute){ return }
  
  play.sound(start)
}

function createTask(task) {
  playSound(start);

  growl(task, { title: 'Pomodoro - ' + (program.time / 60000 )+':00 Remaining', image: pomodoro })

  // Set final timeout
  setTimeout(function(){
    playSound(done);

    growl(task, { title: 'Pomodoro - Take a break!', image: pomodoro })

    process.exit()
  }, program.time)

  // Set coffe break timeout
}
